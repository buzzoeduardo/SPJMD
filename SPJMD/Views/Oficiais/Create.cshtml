@model SPJMD.Models.Oficial
@{
    ViewData["Title"] = "Novo";
}

<h1>@ViewData["Title"]</h1>

<h4>Adicionar Novo Oficial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Re" class="form-label"></label>
                <input asp-for="Re" class="form-control" />
                <span asp-validation-for="Re" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Digito" class="form-label mt-3"></label>
                <input asp-for="Digito" class="form-control text-uppercase" />
                <span asp-validation-for="Digito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Posto" class="form-label mt-3"></label>
                <select asp-for="Posto" asp-items="Html.GetEnumSelectList<SPJMD.Models.Enums.Posto>()"
                        class="form-select">
                    <option selected="selected" value="">Selecionar</option>
                </select>
                <span asp-validation-for="Posto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="form-label mt-3"></label>
                <input asp-for="Nome" class="form-control text-uppercase" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-label mt-3"></label>
                <input asp-for="Email" class="form-control text-lowercase" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="form-label mt-3"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<SPJMD.Models.Enums.FuncaoOficial>()"
                        class="form-select ">
                    <option selected="selected" value="">Selecionar</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Retornar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

