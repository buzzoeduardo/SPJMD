@model IEnumerable<SPJMD.Models.Oficial>

@{
    ViewData["Title"] = "Oficiais";
}

<h1>@ViewData["Title"]</h1>

<div class="form-group">
    <a asp-action="Create" class="btn btn-primary btn-lg">Novo</a>
</div>
<br />
<table class="table table-striped table-hover">
    <thead class="bg-info bg-opacity-25">
        <tr>
            <th class="tamanholetra">
                @Html.DisplayNameFor(model => model.Re)
            </th>
            <th class="tamanholetra">
                @Html.DisplayNameFor(model => model.Digito)
            </th>
            <th class="tamanholetra">
                @Html.DisplayNameFor(model => model.Posto)
            </th>
            <th class="tamanholetra">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="tamanholetra">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="tamanholetra">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th class="tamanholetra">
                @Html.DisplayNameFor(model => model.Procedimentos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Re)
            </td>
            <td class="text-uppercase">
                @Html.DisplayFor(modelItem => item.Digito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posto)
            </td>
            <td class="text-uppercase">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Procedimentos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>

