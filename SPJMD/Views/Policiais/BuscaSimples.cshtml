@model IEnumerable<SPJMD.Models.Policial>
    @{
        ViewData["Title"] = "BuscaSimples";
    }

    <h3>Relação de Policiais Militares</h3>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-outline-dark">Retornar</a> |
        <a asp-action="Create" class="btn btn-outline-dark">Novo</a>
    </div>
    <br />
    <table class="table table-striped table-hover">
        <thead class="bg-success bg-opacity-25">
            <tr>
                <th class="tamanholetra">
                    @Html.DisplayNameFor(model => model.Re)
                </th>
                <th class="tamanholetra">
                    @Html.DisplayNameFor(model => model.Digito)
                </th>
                <th class="tamanholetra">
                    @Html.DisplayNameFor(model => model.Graduacao)
                </th>
                <th class="tamanholetra">
                    @Html.DisplayNameFor(model => model.Nome)
                </th>                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.Graduacao))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Re)
                    </td>
                    <td class="text-uppercase">
                        @Html.DisplayFor(modelItem => item.Digito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Graduacao)
                    </td>
                    <td class="text-uppercase">
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>                   
                    <td>
                         
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalhes</a> 
                        
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>

