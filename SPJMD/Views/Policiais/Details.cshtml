@model SPJMD.Models.Policial

@{
    ViewData["Title"] = "Detalhes";
   
}


<h1>@ViewData["Title"]</h1>
<br />
<div>
    <h5>
        @Html.DisplayFor(model => model.Graduacao)
        <span>&nbsp</span>
        @Html.DisplayFor(model => model.Re) -
        @Html.DisplayFor(model => model.Digito)
        <span class="text-uppercase">&nbsp @Html.DisplayFor(model => model.Nome)</span>
    </h5>

    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Index" class="btn btn-outline-primary">Retornar</a> |
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Editar</a> |

    <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#modalExemplo">
        Excluir
    </button>

    <!-- Modal -->
    <div class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">ATENÇÃO!</h5>                    
                </div>
                <div class="modal-body">
                    Esse cadastro será excluído permanentemente da base de dados.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Cancelar</button>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Excluir" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

